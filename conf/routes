GET     /todos                      controllers.TodoController.getAll
GET     /todos/active               controllers.TodoController.getActive
GET     /todos/completed            controllers.TodoController.getCompleted
GET     /todos/:id                  controllers.TodoController.getById(id: Int)

POST    /todos                      controllers.TodoController.add()
PUT     /todos/:id                  controllers.TodoController.update(id: Int)
DELETE  /todos/:id                  controllers.TodoController.delete(id: Int)

POST    /todos/:id/complete         controllers.TodoController.complete(id: Int)
POST    /todos/:id/uncomplete       controllers.TodoController.uncomplete(id: Int)

POST    /todos/completeAll          controllers.TodoController.completeAll
POST    /todos/uncompleteAll        controllers.TodoController.uncompleteAll

DELETE  /todos/completed/all        controllers.TodoController.deleteCompleted()