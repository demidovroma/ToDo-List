GET     /                           controllers.Main.RunApp()
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Получить все таски
GET     /todos/                     controllers.TodoController.getAllTasks
# Получить таску по id
GET     /todos/:id                  controllers.TodoController.getTasks(id: Int)
# Добавить новую таску
POST    /todos                      controllers.TodoController.addTask
## Удалить таску по id
DELETE  /todos/:id                  controllers.TodoController.deleteTask(id: Int)
# Обновить таску по id
PATCH   /todos/:id                  controllers.TodoController.updateTask(id: Int)
# Переключить статус выполнена по id
PATCH   /todos/complete/:id         controllers.TodoController.completeTask(id: Int)
# Переключить статус НЕ выполнена по id
PATCH   /todos/uncomplete/:id       controllers.TodoController.uncompleteTask(id: Int)
# Переключить статус выполнена всем таскам
PATCH   /todos/complete_all/        controllers.TodoController.completeAll
# Переключить статус НЕ выполнена всем таскам
PATCH   /todos/uncomplete_all/      controllers.TodoController.uncompleteAll
# Удалить все выполненые
PATCH   /todos/delete_completed/    controllers.TodoController.deleteComplited